<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reset_code_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.ResetPasswordCode">

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/resetCodeHeading"
        app:layout_constraintBottom_toBottomOf="@id/resetCodeHeading"
        android:layout_marginLeft="20dp"

        android:src="@drawable/back_arrow"
        app:tint = "@color/black"

        android:clickable="true"
        android:onClick="goToSignIn"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetCodeHeading"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"

        android:text="@string/resetCodeHeading"
        android:gravity="center"
        android:textSize="24sp"
        android:fontFamily="@font/sfprodisplayregular"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetCodeSub"

        app:layout_constraintTop_toBottomOf="@id/resetCodeHeading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"

        android:text="@string/resetCodeSubHeading"
        android:gravity="center_horizontal"
        android:textSize="18sp"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:id="@+id/resetEmail"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resetCodeSub"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/sfprodisplayregular"
        android:hint="\@rafeaaron@gmail.com"
        android:textSize="20sp"
        android:background="@drawable/edit_text_border"

        android:paddingLeft="20dp"

        />

    <Button
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:id="@+id/resetCodeBtn"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_shape"

        android:fontFamily="@font/sfprodisplayregular"
        android:textSize="20sp"
        android:text="Reset"

        />


</androidx.constraintlayout.widget.ConstraintLayout>