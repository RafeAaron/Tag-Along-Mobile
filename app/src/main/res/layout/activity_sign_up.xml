<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signUpHeading"
                android:layout_marginTop="60dp"

                android:text="@string/signUpHeading"
                android:gravity="center"
                android:textSize="24sp"
                android:fontFamily="@font/sfprodisplayregular"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signUpSub"

                android:gravity="center"
                android:layout_marginTop="30dp"

                android:text="@string/signUpSubHeading"
                android:textSize="18sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:text="Username"
                android:fontFamily="@font/sfprodisplayregular"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/usernameSignUp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUpSub"

                android:fontFamily="@font/sfprodisplayregular"
                android:hint="example23"
                android:textSize="20sp"
                android:background="@drawable/edit_text_border"

                android:paddingLeft="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:text="Email"
                android:fontFamily="@font/sfprodisplayregular"
                android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:id="@+id/signUpEmail"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usernameSignUp"
            android:fontFamily="@font/sfprodisplayregular"

            android:hint="example@gmail.com"
            android:background="@drawable/edit_text_border"
            android:textSize="20sp"
            android:shadowDy="0"
            android:inputType="textEmailAddress"
            android:shadowDx="0"

            android:paddingLeft="20dp"

            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:text="Password"
                android:fontFamily="@font/sfprodisplayregular"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/signUpPassword"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUpEmail"
                android:fontFamily="@font/sfprodisplayregular"
                android:hint="********"
                android:textSize="20sp"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_border"

                android:paddingLeft="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:text="Confirm Password"
                android:fontFamily="@font/sfprodisplayregular"
                android:textSize="16sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/signUpConfirmPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signUpPassword"
                android:fontFamily="@font/sfprodisplayregular"
                android:hint="********"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_border"
                android:textSize="20sp"
                android:shadowDy="0"
                android:shadowDx="0"

                android:paddingLeft="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"

                android:text="Already have an account yet? Sign in"
                android:textColor="#0000F4"
                android:clickable="true"
                android:textSize="16sp"
                android:gravity="center"
                android:onClick="goToSignIn"
                />

            <Button
                android:layout_width="300dp"
                android:layout_height="52dp"
                android:id="@+id/signUnBtn"

                android:layout_gravity="center_horizontal"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button_shape"

                android:fontFamily="@font/sfprodisplayregular"
                android:textSize="20sp"
                android:text="Continue"

                />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>