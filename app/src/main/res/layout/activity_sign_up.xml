<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authentication.SignUp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpHeading"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"

        android:text="@string/signUpHeading"
        android:gravity="center"
        android:textSize="24sp"
        android:fontFamily="@font/sfprodisplayregular"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpSub"

        app:layout_constraintTop_toBottomOf="@id/signUpHeading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"

        android:text="@string/signInSubHeading"
        android:textSize="18sp"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:id="@+id/usernameSignUp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpSub"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/sfprodisplayregular"
        android:hint="\@rafeAaron23"
        android:textSize="20sp"
        android:background="@drawable/edit_text_border"

        android:paddingLeft="20dp"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:id="@+id/signUpEmail"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameSignUp"
        android:fontFamily="@font/sfprodisplayregular"
        android:layout_marginTop="10dp"
        android:hint="rafeaaron@gmail.com"
        android:background="@drawable/edit_text_border"
        android:textSize="20sp"
        android:shadowDy="0"
        android:shadowDx="0"

        android:paddingLeft="20dp"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:id="@+id/signUpPassword"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpEmail"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sfprodisplayregular"
        android:hint="\@rafeAaron23"
        android:textSize="20sp"
        android:background="@drawable/edit_text_border"

        android:paddingLeft="20dp"

        />

    <EditText
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:id="@+id/signUpConfirmPassword"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUpPassword"
        android:fontFamily="@font/sfprodisplayregular"
        android:layout_marginTop="10dp"
        android:hint="********"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_border"
        android:textSize="20sp"
        android:shadowDy="0"
        android:shadowDx="0"

        android:paddingLeft="20dp"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:id="@+id/signUnBtn"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_shape"

        android:fontFamily="@font/sfprodisplayregular"
        android:textSize="20sp"
        android:text="Sign Up"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/signUnBtn"
        android:layout_marginBottom="5dp"

        android:text="Already have an account yet? Sign in"
        android:textColor="#0000F4"
        android:clickable="true"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:onClick="goToSignIn"


        />


</androidx.constraintlayout.widget.ConstraintLayout>