<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/nameOfDriverBooked"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        android:text="Name Of Driver"
        android:fontFamily="@font/sfprodisplayregular"
        android:textFontWeight="700"
        android:textSize="14sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/startAndEndDestinationBooked"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"

        android:text="Start To End"
        android:fontFamily="@font/sfprodisplayregular"
        android:textFontWeight="700"
        android:textSize="12sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/timeBooked"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"

        android:text="18:00 pm"
        android:fontFamily="@font/sfprodisplayregular"
        android:textFontWeight="700"
        android:textSize="16sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/agreedFee"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"

        android:text="UGX 7970"
        android:fontFamily="@font/sfprodisplayregular"
        android:textFontWeight="700"
        android:textSize="12sp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>