<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/paymentContainer"
    android:layout_height="64dp"
    android:background="@drawable/payment_shape"
    android:layout_marginBottom="10dp"
    >

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/moneyIcon"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"

        android:src="@mipmap/ic_debit_account"

        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/transferReason"

        app:layout_constraintLeft_toRightOf="@id/moneyIcon"
        app:layout_constraintTop_toTopOf="@id/moneyIcon"
        android:text="Transfer Reason"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"

        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/recieverDetailss"

        app:layout_constraintLeft_toRightOf="@id/moneyIcon"
        app:layout_constraintBottom_toBottomOf="@id/moneyIcon"
        android:text="Reciever ID"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"

        />

    <TextView

        android:id="@+id/transferAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/moneyIcon"
        android:layout_marginRight="20dp"
        android:textSize="14sp"
        android:text="UGX: 6574"

        />

    <TextView

        android:id="@+id/dateOfTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/moneyIcon"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
        android:text="Mar 30"

        />

</androidx.constraintlayout.widget.ConstraintLayout>