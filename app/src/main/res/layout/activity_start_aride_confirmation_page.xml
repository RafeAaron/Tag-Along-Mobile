<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartRide.StartARideConfirmationPage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:gravity="center"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/success_icon"
            app:tint="@color/black"
            />

        <TextView

            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="You Will Be Notified When Your Ride Has Been Advertised"

            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/sfprodisplayregular"
            android:textFontWeight="600"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <TextView

            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Different People Will Be Able To Request To Tag Along. You Reserve The Right To Accept Or Decline"

            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/sfprodisplayregular"
            android:textFontWeight="400"

            android:textColor="#B6B6B6"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>