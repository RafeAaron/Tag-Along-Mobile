<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding.OnboardingScreenOne">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"

        android:id="@+id/backArrowOnBoardingScreenOne"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"

        app:tint="@color/black"

        android:src="@drawable/back_arrow"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backArrowOnBoardingScreenOne"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"

        android:paddingStart="20dp"
        android:paddingEnd="20dp"

        android:id="@+id/scrollViewOnBoardingScreenOne">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Welcome To Tag Along"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="600"
                android:textSize="32sp"
                android:textAlignment="center"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/welcomeStatementOnBoardingOne"

                android:layout_marginTop="20sp"

                android:text="@string/onboardingMessage"
                android:textSize="16sp"
                android:fontFamily="@font/sfprodisplaymedium"
                android:gravity="center"
                android:textFontWeight="550"
                />

            <TextView

                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/coreValues"

                android:textSize="16sp"
                android:fontFamily="@font/sfprodisplaymedium"
                android:gravity="center"
                android:textFontWeight="550"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16sp"
                android:fontFamily="@font/sfprodisplaymedium"
                android:lineSpacingExtra="15dp"
                android:textFontWeight="550"

                android:text="@string/coreValuesList"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16sp"
                android:fontFamily="@font/sfprodisplaymedium"
                android:textFontWeight="550"

                android:text="@string/onboardingMessageConclusion"

                android:layout_marginTop="20dp"
                android:gravity="center"
                />

            <Button
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"

                android:id="@+id/continueOnBoardingScreenOne"

                android:background="@drawable/button_shape"

                android:text="Continue"
                android:textSize="20sp"
                android:fontFamily="@font/sfprodisplaymedium"
                android:layout_marginBottom="20dp"
                />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>