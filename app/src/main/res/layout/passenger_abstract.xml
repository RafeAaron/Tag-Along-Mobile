<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    android:id="@+id/passengerAbstractLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/options_layout"
    android:layout_marginBottom="10dp"
    >

    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:id="@+id/nameOfPassengerAbstract"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"

        android:text="Name of Passenger"
        android:textSize="16sp"
        android:fontFamily="@font/sfprodisplayregular"
        android:textFontWeight="600"
        />

    <TextView

        android:id="@+id/ageOfPassengerAbstract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:text="24"
        android:fontFamily="@font/sfprodisplayregular"
        android:textFontWeight="400"
        android:textSize="16sp"

        />

    <ImageView

        android:id="@+id/genderOfPassengerAbstract"
        android:layout_width="36dp"
        android:layout_height="36dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:src="@drawable/ic_profile_icon"
        app:tint="@color/black"
        android:layout_marginRight="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>