<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="77dp"
    android:id="@+id/layoutForCustomerDetails"
    android:background="@drawable/options_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/driverDetailsAndPassengers"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"

        android:text="Name Of Driver (Number Of Passengers)"
        android:textSize="16sp"
        android:fontFamily="@font/sfprodisplayregular"
        android:textFontWeight="700"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/routeToTake"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/driverDetailsAndPassengers"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"

        android:text="Start -> Destination"
        android:textSize="15sp"
        android:fontFamily="@font/sfprodisplayregular"
        android:textFontWeight="500"

        />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"

        android:id="@+id/icon_gender_trip_details"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"

        android:src="@drawable/ic_profile_icon"
        app:tint="@color/black"

        />

</androidx.constraintlayout.widget.ConstraintLayout>