<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoarding.DriverOnBoarding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:text="Driver Details"
                android:textSize="32sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="700"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:text="As a Driver, you carry the sole responsibility of ensuring that your passengers are safe
and this means providing them with a means of authenticating you.\n\nFill in the details required and you'll be well on your way"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="700"
                />

            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car Model"
                android:textSize="16sp"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="600"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/driverOnBoardingCarModel"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:hint="Prius"
                android:paddingLeft="20dp"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="500"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number Plate"
                android:textSize="16sp"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="600"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/driverOnBoardingNumberPlate"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:hint="UAX 564T"
                android:paddingLeft="20sp"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="500"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car Type"
                android:textSize="16sp"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="600"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/driverOnBoardingCarType"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:hint="Family Car"
                android:paddingLeft="20dp"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="500"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car Color"
                android:textSize="16sp"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="600"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/driverOnBoardingCarColor"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:hint="Maroon"
                android:paddingLeft="20sp"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="500"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="52dp"

                android:id="@+id/driverOnBoardingFinish"
                android:text="Continue"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_shape"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:textSize="18sp"
                android:fontFamily="@font/sfprodisplayregular"
                android:textFontWeight="600"

                />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>